# Railway Crowd Balancer - Environment Variables
# Copy this file to .env in the root directory
# Windows: copy env.example .env
# Mac/Linux: cp env.example .env

# Backend Configuration
BACKEND_PORT=3001
FRONTEND_URL=http://localhost:5173

# Frontend Configuration (optional - only if backend is on different URL)
# VITE_BACKEND_URL=http://localhost:3001

# Admin Security
ADMIN_KEY=demo_key_change_in_production

# Decision Engine Settings (milliseconds)
DECISION_INTERVAL=5000
CHECK_INTERVAL=10000
REDIRECT_COOLDOWN_MS=15000

# Sensor Settings
DEBOUNCE_MS=600

# Density Thresholds (0.0 to 1.0, where 1.0 = 100%)
DENSITY_SAFE=0.40
DENSITY_MODERATE=0.70
ESCALATION_THRESHOLD=0.85

# Retry Settings
RETRY_LIMIT=2

